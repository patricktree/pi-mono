{
  "name": "@mariozechner/pi-coding-agent-web",
  "version": "0.52.9",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mock": "vite --open /?mock=default",
    "build": "vite build",
    "preview": "vite preview",
    "check": "biome check --write --error-on-warnings . && tsc --noEmit && tsc -p tsconfig.tests.json --noEmit",
    "clean": "rm -rf dist",
    "test:e2e": "docker pull mcr.microsoft.com/playwright:v1.58.2-noble && vite build && npx playwright test",
    "test:e2e:update": "docker pull mcr.microsoft.com/playwright:v1.58.2-noble && vite build && npx playwright test --update-snapshots",
    "test:e2e:ui": "PWDEBUG=1 vite build && npx playwright test --ui"
  },
  "dependencies": {
    "@linaria/core": "^7.0.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.10",
    "dompurify": "^3.3.1",
    "lucide-react": "^0.575.0",
    "marked": "^15.0.12",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@wyw-in-js/vite": "^1.0.6",
    "typescript": "^5.7.3",
    "vite": "^7.1.6"
  }
}
